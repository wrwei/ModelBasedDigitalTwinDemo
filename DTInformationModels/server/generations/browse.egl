<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Hello, World! - Not A-Frame</title>
    <meta name="description" content="Hello, World! - Not A-Frame">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script>
      var targetModel = '[%=Input.root.modelName%]';
    </script>
    <script src="/getHelper/browse-manage.js"></script>
  </head>
  <body>
    <div class="m-2 p-2 bg-dark rounded" style="width: 20rem; position: absolute;">
      <legend class="text-white">Query</legend>
      <label class="form-label mb-2 text-white">Section Filter</label>
      <div class="input-group mb-1">
        <input type="text" class="form-control" placeholder="Section Name" id="section-entry">
        <button class="btn btn-success" type="button" id="section-add" onclick="addSection()">Add</button>
      </div>
      <div id="section-list">
      </div>

      <div class="mb-3"></div>

      <label class="form-label mb-2 text-white">Main Type Filter</label>
      <div class="d-grid gap-2">
        <div class="btn-group">
          <button class="btn btn-primary active" id="type-toggle-assets" onclick="addType('assets')">Assets</button>
          <button class="btn btn-primary active" id="type-toggle-lines" onclick="addType('lines')">Lines</button>
          <button class="btn btn-primary active" id="type-toggle-marks" onclick="addType('marks')">Marks</button>
        </div>
      </div>

      <div class="mb-3"></div>

      <label class="form-label mb-2 text-white">Bounding Area Filter</label>
      <div>
        <div class="input-group mb-1">
          <span class="input-group-text">x</span>
          <input type="text" class="form-control" placeholder="0" id="aabb-min-x">
          <span class="input-group-text">y</span>
          <input type="text" class="form-control" placeholder="0" id="aabb-min-y">
          <span class="input-group-text">z</span>
          <input type="text" class="form-control" placeholder="0" id="aabb-min-z">
        </div>
        <div class="input-group mb-1">
          <span class="input-group-text">x</span>
          <input type="text" class="form-control" placeholder="0" id="aabb-max-x">
          <span class="input-group-text">y</span>
          <input type="text" class="form-control" placeholder="0" id="aabb-max-y">
          <span class="input-group-text">z</span>
          <input type="text" class="form-control" placeholder="0" id="aabb-max-z">
        </div>
      </div>

      <div class="mb-3"></div>
      
      <div class="d-grid gap-2">
        <button class="btn btn-primary" onclick="filter()">Filter</button>
      </div>
    </div>

    <table class="table" style="left: 22rem; position: absolute; max-width: calc(100% - 22rem);">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Type</th>
          <th scope="col">Section</th>
        </tr>
      </thead>
      <tbody id="matched-area">
      </tbody>
    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </body>
</html>
